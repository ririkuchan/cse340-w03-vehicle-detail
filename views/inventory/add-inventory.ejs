<%- include("../partials/head") %>
<%- include("../partials/nav") %>

<main>
  <h1>Add New Vehicle</h1>
  <p>Use the form below to add a new vehicle to the inventory.</p>

  <% if (message) { %>
    <div class="notice"><%= message %></div>
  <% } %>

  <% if (errors && errors.length) { %>
    <div class="errors">
      <ul>
        <% errors.forEach(e => { %>
          <li><%= e.msg %></li>
        <% }) %>
      </ul>
    </div>
  <% } %>

  <form action="/inv/add-inventory" method="post" novalidate>
    <!-- Classification -->
    <label for="classification_id">Classification</label>
    <% if (typeof classificationList !== "undefined" && classificationList) { %>
      <!-- validation から来たとき用（HTML文字列） -->
      <%- classificationList %>
    <% } else if (typeof classifications !== "undefined" && classifications.length) { %>
      <!-- 最初の GET 表示用（rows 配列） -->
      <select name="classification_id" id="classificationList" required>
        <option value="">Choose a Classification</option>
        <% classifications.forEach(c => { %>
          <option
            value="<%= c.classification_id %>"
            <%= (classification_id == c.classification_id) ? "selected" : "" %>
          >
            <%= c.classification_name %>
          </option>
        <% }) %>
      </select>
    <% } else { %>
      <p><strong>No classifications found. Please add a classification first.</strong></p>
    <% } %>

    <!-- Make -->
    <label for="inv_make">Make</label>
    <input
      type="text"
      id="inv_make"
      name="inv_make"
      required
      value="<%= inv_make || '' %>"
    >

    <!-- Model -->
    <label for="inv_model">Model</label>
    <input
      type="text"
      id="inv_model"
      name="inv_model"
      required
      value="<%= inv_model || '' %>"
    >

    <!-- Year -->
    <label for="inv_year">Year</label>
    <input
      type="number"
      id="inv_year"
      name="inv_year"
      min="1900"
      max="9999"
      required
      value="<%= inv_year || '' %>"
    >

    <!-- Price -->
    <label for="inv_price">Price</label>
    <input
      type="number"
      id="inv_price"
      name="inv_price"
      min="0"
      step="0.01"
      required
      value="<%= inv_price || '' %>"
    >

    <!-- Miles -->
    <label for="inv_miles">Miles</label>
    <input
      type="number"
      id="inv_miles"
      name="inv_miles"
      min="0"
      required
      value="<%= inv_miles || '' %>"
    >

    <!-- Description （★追加） -->
    <label for="inv_description">Description</label>
    <textarea
      id="inv_description"
      name="inv_description"
      rows="4"
      cols="40"
      required
    ><%= inv_description || '' %></textarea>

    <!-- Color -->
    <label for="inv_color">Color</label>
    <input
      type="text"
      id="inv_color"
      name="inv_color"
      required
      value="<%= inv_color || '' %>"
    >

    <!-- Image -->
    <label for="inv_image">Image Path</label>
    <input
      type="text"
      id="inv_image"
      name="inv_image"
      required
      value="<%= inv_image || '' %>"
    >

    <!-- Thumbnail -->
    <label for="inv_thumbnail">Thumbnail Path</label>
    <input
      type="text"
      id="inv_thumbnail"
      name="inv_thumbnail"
      required
      value="<%= inv_thumbnail || '' %>"
    >

    <button type="submit">Add Vehicle</button>
  </form>
</main>

<%- include("../partials/footer") %>
