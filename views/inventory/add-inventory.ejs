<%- include("../partials/head") %>

<h1>Add New Vehicle</h1>

<p>Use the form below to add a new vehicle to the inventory.</p>

<% if (message) { %>
  <p class="notice"><%= message %></p>
<% } %>

<% if (errors && errors.length) { %>
  <div class="form-errors">
    <p>Please correct the following errors:</p>
    <ul>
      <% errors.forEach(e => { %>
        <li><%= e.msg %></li>
      <% }) %>
    </ul>
  </div>
<% } %>

<form method="post" action="/inv/add-inventory" class="vehicle-form">
  <!-- Classification -->
  <div class="form-field">
    <label for="classification_id">Classification</label>

    <% if (typeof classificationList !== "undefined" && classificationList) { %>
      <!-- validation エラー時はこちら（HTML文字列） -->
      <%- classificationList %>
    <% } else if (typeof classifications !== "undefined" && classifications.length) { %>
      <!-- 初回表示時はこちら（配列） -->
      <select id="classification_id" name="classification_id" required>
        <option value="">Choose a Classification</option>
        <% classifications.forEach(c => { %>
          <option
            value="<%= c.classification_id %>"
            <%= Number(classification_id) === c.classification_id ? "selected" : "" %>>
            <%= c.classification_name %>
          </option>
        <% }) %>
      </select>
    <% } else { %>
      <p>No classifications found. Please add a classification first.</p>
    <% } %>
  </div>

  <!-- Make -->
  <div class="form-field">
    <label for="inv_make">Make</label>
    <input
      type="text"
      id="inv_make"
      name="inv_make"
      required
      value="<%= inv_make || '' %>"
    >
  </div>

  <!-- Model -->
  <div class="form-field">
    <label for="inv_model">Model</label>
    <input
      type="text"
      id="inv_model"
      name="inv_model"
      required
      value="<%= inv_model || '' %>"
    >
  </div>

  <!-- Year -->
  <div class="form-field">
    <label for="inv_year">Year</label>
    <input
      type="number"
      id="inv_year"
      name="inv_year"
      required
      value="<%= inv_year || '' %>"
    >
  </div>

  <!-- Price -->
  <div class="form-field">
    <label for="inv_price">Price</label>
    <input
      type="number"
      step="0.01"
      id="inv_price"
      name="inv_price"
      required
      value="<%= inv_price || '' %>"
    >
  </div>

  <!-- Miles -->
  <div class="form-field">
    <label for="inv_miles">Miles</label>
    <input
      type="number"
      id="inv_miles"
      name="inv_miles"
      required
      value="<%= inv_miles || '' %>"
    >
  </div>

  <!-- Description -->
  <div class="form-field">
    <label for="inv_description">Description</label>
    <textarea
      id="inv_description"
      name="inv_description"
      rows="4"
      required
    ><%= inv_description || '' %></textarea>
  </div>

  <!-- Color -->
  <div class="form-field">
    <label for="inv_color">Color</label>
    <input
      type="text"
      id="inv_color"
      name="inv_color"
      required
      value="<%= inv_color || '' %>"
    >
  </div>

  <!-- Image Path (デフォルト画像つき) -->
  <div class="form-field">
    <label for="inv_image">Image Path</label>
    <input
      type="text"
      id="inv_image"
      name="inv_image"
      required
      value="<%= inv_image || '/images/vehicles/no-image.png' %>"
    >
  </div>

  <!-- Thumbnail Path (デフォルト画像つき) -->
  <div class="form-field">
    <label for="inv_thumbnail">Thumbnail Path</label>
    <input
      type="text"
      id="inv_thumbnail"
      name="inv_thumbnail"
      required
      value="<%= inv_thumbnail || '/images/vehicles/no-image-tn.png' %>"
    >
  </div>

  <button type="submit">Add Vehicle</button>
</form>

<%- include("../partials/footer") %>
